<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.2" PrivateAssets="all" />
    <PackageReference Include="Radzen.Blazor" Version="6.4.0" />
  </ItemGroup>

  <Target Name="ReplaceCacheBustVersion" AfterTargets="Build">
    <PropertyGroup>
      <VersionString>$([System.DateTime]::UtcNow.ToString("yyyyMMddHHmmss"))</VersionString>
    </PropertyGroup>
    <Message Text="Injecting cache-bust version: $(VersionString)" />
    <ReadLinesFromFile File="wwwroot/index.html">
      <Output TaskParameter="Lines" ItemName="IndexHtmlLines" />
    </ReadLinesFromFile>
    <WriteLinesToFile
            File="wwwroot/index.html"
            Lines="@(IndexHtmlLines->Replace('__CACHEBUST__', '$(VersionString)'))"
            Overwrite="true" />
  </Target>

</Project>
